<Window x:Class="Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Мой склад"
        WindowState="Maximized"
        ResizeMode="CanResize">

    <Window.Resources>

        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E5A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <!-- 🌈 Background -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1E1E2F" Offset="0"/>
                <GradientStop Color="#2B2B45" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Главный layout -->
        <Grid>

            <!-- Sidebar + Main -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="8*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0"
                    Background="#181825">

                <StackPanel Margin="10">

                    <TextBlock Text="Мой склад"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="10"/>

                    <Button Content="Главная"
                            Style="{StaticResource MenuButton}"
                            Command="{Binding ShowDashboardCommand}"/>
                    <Button Content="Продукты"
                            Style="{StaticResource MenuButton}"
                            Command="{Binding ShowProductsCommand}"/>
                    <Button Content="Продажи"
                            Style="{StaticResource MenuButton}"
                            Command="{Binding ShowSalesCommand}"/>
                    <Button Content="Покупки"
                            Style="{StaticResource MenuButton}"
                            Command="{Binding ShowPurchasesCommand}"/>
                    <Button Content="Долги"
                            Style="{StaticResource MenuButton}"
                            Command="{Binding ShowDebtsCommand}"/>

                </StackPanel>
            </Border>

            <!-- Правая часть -->
            <Grid Grid.Column="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="9*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0"
                        Background="#252538"
                        Padding="20">

                    <TextBlock Text="Header"
                               Foreground="White"
                               FontSize="20"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </Border>

                <!-- Content -->
                <Border Grid.Row="1"
                        Background="#F5F5F5"
                        Padding="20">

                    <ContentControl Content="{Binding CurrentView}" />
                </Border>

            </Grid>

        </Grid>
    </Grid>

</Window>
